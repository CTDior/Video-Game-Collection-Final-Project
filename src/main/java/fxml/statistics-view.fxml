<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.gametracker.controllers.StatisticsController">
    <top>
        <Label text="Statistics" style="-fx-padding:10; -fx-font-size:18px;"/>
    </top>
    <center>
        <VBox spacing="15" style="-fx-padding:15;">
            <HBox spacing="20">
                <Label text="Total Games:"/>
                <Label fx:id="totalGamesLabel"/>
            </HBox>
            <HBox spacing="20">
                <Label text="Completion Rate:"/>
                <Label fx:id="completionRateLabel"/>
            </HBox>
            <PieChart fx:id="platformPieChart" title="Games by Platform"/>
        </VBox>
    </center>
</BorderPane>

